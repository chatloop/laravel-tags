{
    "name": "chatloop/laravel-tags",
    "description": "Add tags and taggable behaviour to your Laravel app",
    "keywords": [
        "laravel-tags"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Chatloop",
            "email": "support@chatloop.com",
            "homepage": "https://chatloop.com",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.67|^9.0|^10.0|^11.0",
        "nesbot/carbon": "^2.63|^3.0",
        "spatie/eloquent-sortable": "^3.10|^4.0",
        "spatie/laravel-package-tools": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "orchestra/testbench": "^6.13|^7.0|^8.0|^9.0",
        "pestphp/pest": "^1.22|^2.0",
        "phpunit/phpunit": "^9.5.2"
    },
    "autoload": {
        "psr-4": {
            "Chatloop\\Tags\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Chatloop\\Tags\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Chatloop\\Tags\\TagsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
